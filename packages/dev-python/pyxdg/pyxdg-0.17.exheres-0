require distutils [ python_dep=2.4 ]

SUMMARY="a python library to access freedesktop.org standards"
HOMEPAGE="http://pyxdg.freedesktop.org"
DOWNLOADS="http://www.freedesktop.org/~lanius/${PNV}.tar.gz"

LICENCES="LGPL-2"
SLOT="0"
PLATFORMS="~x86"
MYOPTIONS=""

src_install () {
    distutils_src_install

    insinto /usr/share/doc/${PNV}/test
    insopts -m 755
    doins test/*
}
