require multilib xfont
FONT=${PN%-ttf}

MY_PNV=${PNV/-ttf}.ttf
SUMMARY="GNU Unifont"
HOMEPAGE="http://unifoundry.com/unifont.html"
DOWNLOADS="http://unifoundry.com/${MY_PNV}.gz"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~x86"

WORK=${WORKBASE}

src_install() {
    insinto /usr/$(get_libdir)/X11/fonts/${FONT}
    doins ${MY_PNV}
    fix_fonts
}
