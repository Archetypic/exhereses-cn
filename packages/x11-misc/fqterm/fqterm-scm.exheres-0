SCM_REPOSITORY="http://fqterm.googlecode.com/svn"
require fqterm scm-svn

DOWNLOADS="${HOMEPAGE}/files/QQWry.zip"
PLATFORMS=""

DEPENDENCIES+="
    build+run:
        sys-sound/alsa-lib"

src_unpack() {
    default
    scm_src_unpack
}

src_install() {
    cmake_src_install

    # IP location database file
    insinto /usr/share/FQTerm
    doins "${WORKBASE}"/QQWry.Dat
}
