        dev-db/sqlite:3
"

SCONS_SRC_CONFIGURE_PARAMS=( --prefix=/usr --libdir=/usr/${LIBDIR} --datadir=/usr/share )
SCONS_SRC_INSTALL_PARAMS=( --install-sandbox="${IMAGE}" )

