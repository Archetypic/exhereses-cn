require scons sunpinyin

SUMMARY="An IME library based on Statistical Language Model"

PLATFORMS="~amd64 ~x86"
MYOPTIONS="debug"

DEPENDENCIES="
    build:
        dev-util/intltool[>=0.35.0]
        virtual/pkg-config
        sys-devel/gettext
