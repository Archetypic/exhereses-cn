MY_PNV=${PN}-$(ever replace 3 '.')
DOWNLOADS="http://cle.linux.org.tw/gcin/download/${MY_PNV}.tar.bz2"
#http://ftp.twaren.net/local-distfiles/gcin/${MY_PNV}.tar.bz2"
require gcin toolchain-funcs

PLATFORMS="~x86"

WORK=${WORKBASE}/${MY_PNV}

DEFAULT_SRC_PREPARE_PATCHES=(
    "${FILES}"/gcin-1.4.6-configure.diff
    "${FILES}"/gcin-1.4.5-Makefile.diff
    "${FILES}"/gcin-1.4.5-qt4-im-makefile.diff
)
DEFAULT_SRC_COMPILE_PARAMS=( CC="$(tc-getCC)" OPTFLAGS="" )
MAKEOPTS="${MAKEOPTS} -j1"

src_prepare() {
    echo "${PVR}" > ${WORK}/VERSION.gcin || die "failed to fix version number"
    default
}

src_configure() {
    econf \
        $(optionq anthy && echo --use_anthy=Y ) \
        $(optionq qt4 && echo --qt4_im=Y ) \
        $(optionq nls && echo --use_i18n=Y ) \
        --qt3_im=N \
        --use_tsin=N
}
