require sunpinyin scons

SUMMARY="Standalone XIM server for sunpinyin"

SLOT="0"
PLATFORMS="~amd64"

DEPENDENCIES="
    build:
        dev-util/pkg-config
    build+run:
        x11-libs/libX11
        x11-libs/gtk+:2
        inputmethods/libsunpinyin
"

SCONS_SRC_CONFIGURE_PARAMS=( --prefix=/usr )
SCONS_SRC_INSTALL_PARAMS=( --install-sandbox=${IMAGE} )

WORK=${WORK}/wrapper/xim


